@model IEnumerable<FinalProject.Models.Flight>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<body background="~/Images/2280.jpg">
</body>

@using (Html.BeginForm())
{
<p class="form-group">
    @Html.ActionLink("Detailed Search", "DetailedSearch", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Show All", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("DepartFlight", "SelectFlightToDepart", null, new { @class = "btn btn-default" })
</p>
}
@using (Html.BeginForm("SearchDateResults", "Flights", FormMethod.Get))
{
    <p class="form-group">
        Date: @Html.TextBox("SelectedDate", "yyyy-MM-DD", new { @class = "form-control" })
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FlightNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BaseFare)
        </th>
        <th>
           @Html.DisplayNameFor(model => model.HasDeparted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FlightNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BaseFare)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasDeparted)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FlightID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FlightID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FlightID })
        </td>
    </tr>
}

</table>

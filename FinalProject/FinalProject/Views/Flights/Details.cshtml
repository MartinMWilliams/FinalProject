<h4>Reservation Flight Details</h4>
<table class="table table-bordered">
    <tr>
        <th>UserName</th>
        <th>First Name</th>
        <th>MI</th>
        <th>Last Name</th>
        <th>Advantage Number</th>
        <th>Seat Assignment</th>
        <th>Fare</th>
        <th>Reservation Number</th>

    </tr>
    @foreach (var item in Model.ReservationFlightDetails)
    {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
        <td>@Html.DisplayFor(modelItem => item.User.FirstName)</td>
        <td>@Html.DisplayFor(modelItem => item.User.MiddleInitial)</td>
        <td>@Html.DisplayFor(modelItem => item.User.LastName)</td>
        <td>@Html.DisplayFor(modelItem => item.User.AdvantageNumber)</td>
        <td>@Html.DisplayFor(modelItem => item.SeatAssignment)</td>
        <td>@Html.DisplayFor(modelItem => item.Fare)</td>
        <td>@Html.DisplayFor(modelItem => item.Reservation.ReservationNumber)</td>
    </tr>
    }
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.FlightID }) |
